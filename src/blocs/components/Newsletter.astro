---
import { Icon } from "astro-icon/components";
const { content } = Astro.props;
---

<form
	action="#"
	method="post"
	class="newsletter"
	aria-describedby="newsletter-desc"
>
	<p id="newsletter-desc">
		{content}
	</p>
	<div class="newsletter__inner">
		<label>
			<span class="visually-hidden">Your email</span>
			<input
				class="newsletter__input"
				type="email"
				name="email"
				placeholder="Your email"
				required
				autocomplete="email"
			/>
		</label>
		<button
			class="newsletter__button"
			type="submit"
			title="Submit email"
			aria-label="Submit email"
		>
			<Icon
				name="blue-arrow"
				width={18}
				height={28}
			/>
		</button>
	</div>
</form>

<style lang="scss">
	@use "@styles/helpers" as *;

	.newsletter {
		display: flex;
		flex-direction: column;
		row-gap: 28px;

		&__inner {
			position: relative;
			width: fit-content;
		}

		&__input {
			border-bottom: 1px solid var(--color-white-400);
			padding: 8px 16px;
			font-size: 14px;
		}

		&__button {
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			z-index: 10;
		}
	}
</style>
